@model ListAssist.Data.Models.LAList

@{
    ViewBag.Title = "List Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageHeader {Details!}

<div class="row">
    <div class="small-12 columns">
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
        </dl>
    </div>
    <div class="small-12 large-6 columns end">
        <table class="table">
            <thead>
                <tr>
                    <th width="20">Done</th>
                    <th width="300">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LAListItems)
                {
                    <tr>
                        <td>@Html.CheckBoxFor(modelItem => item.Done)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="small-12 columns">
        <button class="secondary">@Html.ActionLink("Edit", "Edit", new { id = Model.ID })</button>
    </div>
</div>
