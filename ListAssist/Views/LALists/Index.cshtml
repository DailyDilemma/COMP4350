@model IEnumerable<ListAssist.Data.Models.LAList>

@{
    ViewBag.Title = "Welcome to ListAssist!";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageHeader {Welcome to ListAssist! Create and edit your lists here!}

<div class="row">
    <div class="small-12 columns">
        <button class="button expand success round">@Html.ActionLink("Create New List", "Create")</button>
    </div>
    <div class="small-12 columns listGrid">
        <div class="small-3 columns show-for-medium-up listHeader">
            @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="small-9 columns show-for-medium-up listHeader">
            Actions
        </div>
    @foreach (var item in Model)
    {
        <div class="small-12 columns itemWrapper">
            <div class="row">
                <div class="small-4 columns show-for-small-only smallListLabel">
                    @Html.DisplayNameFor(model => model.Name):
                </div>
                <div class="small-8 medium-3 columns listName">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>
                <div class="small-4 medium-3 columns listAction">
                    <button class="button expand">@Html.ActionLink("Edit", "Edit", new { id = item.ID })</button>
                </div>
                <div class="small-4 medium-3 columns listAction">
                    <button class="button expand">@Html.ActionLink("Details", "Details", new { id = item.ID })</button>
                </div>
                <div class="small-4 medium-3 columns listAction">
                    <button class="alert expand">@Html.ActionLink("Delete", "Delete", new { id = item.ID })</button>
                </div>
            </div>
        </div>
    }
    </div>
</div>