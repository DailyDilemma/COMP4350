@model ListAssist.Data.Models.LAListItem

@{
    ViewBag.Title = "RemoveListItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageHeader {Remove List Item}

<div class="row">
    <div class="small-12 columns">
        <h3>Are you sure you want to delete this list item?</h3>
    </div>
    <div class="small-6 medium-3 large-2 columns listDetailsLabel">
        @Html.DisplayNameFor(model => model.Description):
    </div>
    <div class="small-6 medium-5 large-6 columns end listDetailsName">
        @Html.DisplayFor(model => model.Description)
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="small-12 medium-8 columns">
            <button type="submit" class="button warning expand round">Delete</button>
        </div>
    </div>
}

