@model ListAssist.Data.Models.LAListItem

@{
    ViewBag.Title = "RemoveListItem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section PageHeader {Remove List Item}


<div class="row">
    <div class="small-12 columns">
        <h3>Are you sure you want to delete this list item?</h3>
        <dl>
            <dt>@Html.DisplayNameFor(model => model.Description)</dt>
            <dd>@Html.DisplayFor(model => model.Description)</dd>
        </dl>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="small-12 columns">
            <button type="submit" class="button warning">Delete</button>
        </div>
    </div>
}

