<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />

    @*Set the viewport width to device width for mobile *@
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/foundation/css")
    @Styles.Render("~/Content/Site.css")

    @RenderSection("head", required: false)
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    @Scripts.Render("~/Scripts/app.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
</head>
<body>
    <header id="site-title" class="row">
        <div class="small-12 columns">
            <h1>ListAssist</h1>
        </div>
    </header>
    <nav id="general-nav" class="row collapse">
        <div class="small-6 columns">
            @Html.ActionLink("Home", "Index")
        </div>
        <div class="small-6 columns">
            @Html.ActionLink("Create", "Create")
        </div>
    </nav>

    <div id="page-header" class="row">
        <div class="small-12 columns">
            <h2>@RenderSection("PageHeader", required:true)</h2>
        </div>
    </div>
    
    @RenderBody()  

    <script>
        $(document).foundation();
    </script>
    @*Use the Scripts section to define page specific scripts*@
    @RenderSection("scripts", required: false)
</body>
</html>